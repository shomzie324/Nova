<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.nova.SecondScreenActivity"
    android:background="#2a358b">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:paddingLeft="50dp"
        android:paddingRight="90dp"
        android:paddingTop="20dp"
        android:text="Hi,"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/new_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="100dp"
        android:paddingTop="20dp"
        android:text="      John"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="80dp"
        android:text="Nova"
        android:textColor="#FFFF00"
        android:textSize="30dp"
        android:gravity="top"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hello"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="50dp"
        android:paddingRight="60dp"
        android:text="I'm           , nice
to meet you!"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_below="@id/name">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:fontFamily="@font/poppins"
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:text="What school do
you go to?"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins"
                android:maxLines="1"
                android:singleLine="true"
                android:text="enter school"
                android:gravity="center"
                android:textStyle="italic"
                android:alpha="0.7"
                android:textColor="#FFF" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/goto_resources"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bubble"
            android:fontFamily="@font/open_sans"
            android:onClick="goto_home"
            android:text="DONE"
            android:textColor="#FFFFFF" />

    </LinearLayout>




</RelativeLayout>
