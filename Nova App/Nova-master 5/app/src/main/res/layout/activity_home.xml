<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30336b"
    android:visibility="visible"
    tools:context="com.example.android.nova.Home"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:fontFamily="@font/poppins"
            android:text="Welcome,"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/home_field"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins"
            android:text="Russell"
            android:textColor="#FFF"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:lineSpacingExtra="-12dp"
        android:text="How can I help you today?"
        android:textColor="#FFF"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#F6E37C"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nova_talk"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/logo2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="TALK WITH NOVA"
                android:textColor="#2F336C"
                android:textSize="28sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#19B99A"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:background="#26b99a"
                android:layout_height="90dp"
                android:text="FIND RESOURCES"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="28sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:onClick="goto_resources"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>